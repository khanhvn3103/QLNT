<!DOCTYPE html>
<html lang="vi">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>QuanlyLothuoc</title>
    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <!-- Font Awesome -->
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css"
      rel="stylesheet"
    />
    <!-- Line Awesome -->
    <link
      rel="stylesheet"
      href="https://maxst.icons8.com/vue-static/landings/line-awesome/line-awesome/1.3.0/css/line-awesome.min.css"
    />
    <link rel="stylesheet" href="css/style.css" />
  </head>
  <body>
    <div>
      <!-- Sidebar -->
      <div class="sidebar">
        <div class="sidebar-brand">
          <h1><span class="lab la-accusoft"></span> Medicine</h1>
        </div>
        <div class="sidebar-menu">
          <ul>
            <li>
              <a href="/canhbaohansudung"
                ><span class="icon"><i class="fa-solid fa-business-time"></i></span>
                <span>Cảnh báo hạn sử dụng</span>
              </a>
            </li>
            <li>
              <a href="/users"
                ><span class="icon"><i class="fa-solid fa-user"></i></span>
                <span>Quản lý người dùng</span>
              </a>
            </li>
            <li>
              <a href="/lothuoc"
                ><span class="icon"><i class="fa-solid fa-parachute-box"></i></span>
                <span>Quản lý lô thuốc</span>
              </a>
            </li>
            <li>
              <a href="/thuoc"
                ><span class="icon"><i class="fa-solid fa-tablets"></i></span>
                <span>Quản lý thuốc</span>
              </a>
            </li>
            <li>
              <a href="/hoadon"
                ><span class="icon"><i class="fa-regular fa-money-bill-1"></i></span>
                <span>Quản lý hóa đơn</span>
              </a>
            </li>
            <li>
              <a href="/khachhang"
                ><span class="icon"><i class="fa-solid fa-users"></i></span>
                <span>Quản lý khách hàng</span>
              </a>
            </li>
          </ul>
        </div>
      </div>

      <!-- Content Area -->
      <div class="content">
        <header>
          <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid">
              <a class="navbar-brand" href="#">Quản lý lô thuốc</a>
              <button
                class="navbar-toggler"
                type="button"
                data-bs-toggle="collapse"
                data-bs-target="#navbarNav"
                aria-controls="navbarNav"
                aria-expanded="false"
                aria-label="Toggle navigation"
              >
                <span class="navbar-toggler-icon"></span>
              </button>
              <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                  <li class="nav-item">
                    <button class="btn btn-exit" type="button">Đăng xuất</button>
                  </li>
                </ul>
              </div>
            </div>
          </nav>
        </header>

        <!-- Nút thêm lô thuốc -->
        <main>
          <div class="container">
            <div class="mb-3 text-end">
              <button
                class="btn btn-custom"
                data-bs-toggle="modal"
                data-bs-target="#addModal"
              >
                Thêm Lô Thuốc
              </button>
            </div>

            <!-- Bảng Lô Thuốc -->
            <table class="table">
              <thead>
                <tr>
                  <th>ID</th>
                  <th>Hạn Sử Dụng</th>
                  <th>Tổng tiền</th>
                </tr>
              </thead>
              <tbody>
                <% lothuocs.forEach(loThuoc => { %>
                  <tr>
                    <td><%= loThuoc.LoThuocID %></td>
                    <td><%= loThuoc.NgayNhap %></td>
                    <td><%= loThuoc.TongTien %></td>
                  </tr>
                <% }); %>
              </tbody>
            </table>
          </div>

          <!-- Modal Thêm Lô Thuốc -->
          <div
            class="modal fade"
            id="addModal"
            tabindex="-1"
            aria-labelledby="addModalLabel"
            aria-hidden="true"
          >
            <div class="modal-dialog">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title" id="addModalLabel">Thêm Lô Thuốc</h5>
                  <button
                    type="button"
                    class="btn-close"
                    data-bs-dismiss="modal"
                    aria-label="Close"
                  ></button>
                </div>
                <div class="modal-body">
                  <form action="/lothuoc/create" method="POST">
                    <div class="mb-3">
                      <label for="NgayNhap" class="form-label">Ngày nhập</label>
                      <input
                        type="date"
                        class="form-control"
                        id="NgayNhap"
                        name="NgayNhap"
                        required
                      />
                    </div>
                    <div class="mb-3">
                      <label for="TongTien" class="form-label">Tổng tiền</label>
                      <input
                        type="text"
                        class="form-control"
                        id="TongTien"
                        name="TongTien"
                        required
                      />
                    </div>
                    <!-- Thêm thuốc vào lô -->
                    <div class="mb-3">
                      <label for="ThuocList" class="form-label">Danh sách thuốc</label>
                      <textarea
                        class="form-control"
                        id="ThuocList"
                        name="ThuocList"
                        required
                      ></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary">Lưu</button>
                  </form>
                </div>
                <div class="modal-footer">
                  <button
                    type="button"
                    class="btn btn-secondary"
                    data-bs-dismiss="modal"
                  >
                    Đóng
                  </button>
                </div>
              </div>
            </div>
          </div>
        </div>
      </main>

      <!-- Bootstrap JS và Popper.js -->
      <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"></script>
    </div>
  </body>
</html>
