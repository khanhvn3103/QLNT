<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Quản Lý Thuốc</title>
    <link rel="stylesheet" href="/public/css/bootstrap.min.css" />
    <script src="/public/js/jquery-3.7.1.min.js"></script>
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container-fluid">
        <a class="navbar-brand" href="#">Quản Lý Thuốc</a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarNav"
          aria-controls="navbarNav"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav ms-auto">
            <li class="nav-item">
              <a class="nav-link active" href="/">Trang Chủ</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/medicine/add">Thêm Thuốc</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/report">Báo Cáo</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <div class="container mt-5">
      <h1>Danh Sách Thuốc</h1>
      <div class="mb-4">
        <input
          type="text"
          id="searchInput"
          class="form-control"
          placeholder="Tìm kiếm thuốc..."
        />
      </div>

      <table class="table table-striped">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Tên Thuốc</th>
            <th scope="col">Số Lượng</th>
            <th scope="col">Giá</th>
            <th scope="col">Hạn Sử Dụng</th>
            <th scope="col">Hành Động</th>
          </tr>
        </thead>
        <tbody id="medicineList">
          <% medicines.forEach(function(medicine, index) { %>
          <tr>
            <td><%= index + 1 %></td>
            <td><%= medicine.tenThuoc %></td>
            <td><%= medicine.soLuong %></td>
            <td><%= medicine.giaTien %></td>
            <td><%= medicine.hanSuDung %></td>
            <td>
              <a
                href="/medicine/edit/<%= medicine.id %>"
                class="btn btn-warning"
                >Sửa</a
              >
              <a
                href="/medicine/delete/<%= medicine.id %>"
                class="btn btn-danger"
                >Xóa</a
              >
            </td>
          </tr>
          <% }); %>
        </tbody>
      </table>
    </div>

    <script src="/public/js/bootstrap.min.js"></script>
  </body>
</html>
