<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Dashboard</title>
    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <!-- Font Awesome -->
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css"
      rel="stylesheet"
    />
    <!-- Line Awesome -->
    <link
      rel="stylesheet"
      href="https://maxst.icons8.com/vue-static/landings/line-awesome/line-awesome/1.3.0/css/line-awesome.min.css"
    />
    <link rel="stylesheet" href="/css/style.css" />
  </head>
  <body>
    <!-- Sidebar -->
    <div class="sidebar">
      <div class="sidebar-brand">
        <h1><span class="lab la-accusoft"></span> Medicine</h1>
      </div>
      <div class="sidebar-menu">
        <ul>
          <li>
            <a href="#">
              <span class="icon"
                ><i class="fa-solid fa-business-time"></i
              ></span>
              <span>Cảnh báo hạn sử dụng</span>
            </a>
          </li>
          <li>
            <a href="#">
              <span class="icon"><i class="fa-solid fa-user"></i></span>
              <span>Quản lý người dùng</span>
            </a>
          </li>
          <li>
            <a href="#">
              <span class="icon"
                ><i class="fa-solid fa-parachute-box"></i
              ></span>
              <span>Quản lý lô thuốc</span>
            </a>
          </li>
          <li>
            <a href="#">
              <span class="icon"><i class="fa-solid fa-tablets"></i></span>
              <span>Quản lý thuốc</span>
            </a>
          </li>
          <li>
            <a href="#">
              <span class="icon"
                ><i class="fa-regular fa-money-bill-1"></i
              ></span>
              <span>Quản lý hóa đơn</span>
            </a>
          </li>
          <li>
            <a href="#">
              <span class="icon"><i class="fa-solid fa-users"></i></span>
              <span>Quản lý khách hàng</span>
            </a>
          </li>
        </ul>
      </div>
    </div>

    <!-- Content Area -->
    <div class="content">
      <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
          <div class="container-fluid">
            <a class="navbar-brand" href="#">Quản lý bán hàng</a>
            <button
              class="navbar-toggler"
              type="button"
              data-bs-toggle="collapse"
              data-bs-target="#navbarNav"
              aria-controls="navbarNav"
              aria-expanded="false"
              aria-label="Toggle navigation"
            >
              <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
              <ul class="navbar-nav ms-auto">
                <li class="nav-item">
                  <button class="btn btn-exit" type="button">Đăng xuất</button>
                </li>
              </ul>
            </div>
          </div>
        </nav>
      </header>

      <main>
        <div class="container">
          <div class="row">
            <div class="col-md-8">
              <div class="card">
                <div class="card-header bg-primary text-white">
                  Danh Sách Thuốc
                </div>
                <div class="card-body">
                  <table class="table table-striped">
                    <thead>
                      <tr>
                        <th>STT</th>
                        <th>Tên Thuốc</th>
                        <th>Tên Lô</th>
                        <th>Số Lượng</th>
                        <th>Hạn Sử Dụng</th>
                      </tr>
                    </thead>
                    <tbody>
                      <tr>
                        <td>1</td>
                        <td>Paracetamol</td>
                        <td>Lô 101</td>
                        <td>1000</td>
                        <td>31/12/2025</td>
                      </tr>
                      <tr>
                        <td>2</td>
                        <td>Aspirin</td>
                        <td>Lô 102</td>
                        <td>500</td>
                        <td>30/11/2024</td>
                      </tr>
                      <tr>
                        <td>3</td>
                        <td>Ibuprofen</td>
                        <td>Lô 103</td>
                        <td>750</td>
                        <td>15/10/2023</td>
                      </tr>
                      <tr>
                        <td>4</td>
                        <td>Amoxicillin</td>
                        <td>Lô 104</td>
                        <td>200</td>
                        <td>01/01/2024</td>
                      </tr>
                      <tr>
                        <td>5</td>
                        <td>Ciprofloxacin</td>
                        <td>Lô 105</td>
                        <td>300</td>
                        <td>12/12/2025</td>
                      </tr>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
            <div class="col-md-4">
              <div class="card">
                <div class="card-header bg-secondary text-white">
                  Thông Tin Người Dùng
                </div>
                <div class="card-body">
                  <form class="tt-nguoidung">
                    <div class="mb-3">
                      <label for="name" class="form-label">Tên</label>
                      <input
                        type="text"
                        class="form-control"
                        id="name"
                        placeholder="Tên người dùng"
                      />
                    </div>
                    <div class="mb-3">
                      <label for="phone" class="form-label">SDT</label>
                      <input
                        type="text"
                        class="form-control"
                        id="phone"
                        placeholder="Số điện thoại"
                      />
                    </div>
                    <div class="mb-3">
                      <label for="points" class="form-label">Điểm</label>
                      <input
                        type="text"
                        class="form-control"
                        id="points"
                        placeholder="Điểm"
                      />
                    </div>
                    <div class="mb-3 thuocdamua-table">
                      <label for="medicines-purchased" class="form-label"
                        >Thuốc đã mua</label
                      >
                      <table class="table table-bordered">
                        <thead>
                          <tr>
                            <th>Tên Thuốc</th>
                            <th>Số Lượng</th>
                          </tr>
                        </thead>
                        <tbody>
                          <tr>
                            <td>Paracetamol</td>
                            <td>2</td>
                          </tr>
                          <tr>
                            <td>Ibuprofen</td>
                            <td>3</td>
                          </tr>
                          <!-- Thêm các hàng thuốc khác nếu cần -->
                        </tbody>
                      </table>
                    </div>
                    <div class="mb-3">
                      <label for="discount-code" class="form-label"
                        >Mã giảm giá</label
                      >
                      <input
                        type="text"
                        class="form-control"
                        id="discount-code"
                        placeholder="Mã giảm giá"
                      />
                    </div>
                    <button type="submit" class="btn btn-primary">
                      Cập nhật
                    </button>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
      </main>
    </div>

    <!-- Bootstrap JS and Popper.js -->
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js"></script>
  </body>
</html>
